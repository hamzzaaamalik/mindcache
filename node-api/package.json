{
  "name": "mindcache-api",
  "version": "1.0.0",
  "description": "Node.js REST API server for MindCache - A lightweight, local-first memory engine for AI applications",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "build": "echo 'Building Rust core...' && cd ../rust-core && cargo build --release",
    "build:debug": "echo 'Building Rust core (debug)...' && cd ../rust-core && cargo build",
    "prebuild": "npm run lint",
    "docker:build": "docker build -t mindcache-api .",
    "docker:run": "docker run -p 3000:3000 mindcache-api",
    "docs": "jsdoc -c jsdoc.conf.json",
    "clean": "rm -rf node_modules coverage docs/generated",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "prepare": "cd ../rust-core && cargo build --release"
  },
  "keywords": [
    "memory",
    "ai",
    "llm",
    "cache",
    "storage",
    "api",
    "rust",
    "ffi",
    "nodejs",
    "express"
  ],
  "author": {
    "name": "MindCache Team",
    "email": "team@mindcache.dev",
    "url": "https://mindcache.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mindcache/mindcache.git",
    "directory": "node-api"
  },
  "bugs": {
    "url": "https://github.com/mindcache/mindcache/issues"
  },
  "homepage": "https://mindcache.dev",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "ffi-napi": "^4.0.3",
    "ref-napi": "^3.0.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jsdoc": "^4.0.2",
    "@types/jest": "^29.5.8",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "optionalDependencies": {
    "gc-stats": "^1.4.0",
    "clinic": "^13.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "port": 3000,
    "host": "0.0.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "coverage/",
      "logs/",
      "*.test.js"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}